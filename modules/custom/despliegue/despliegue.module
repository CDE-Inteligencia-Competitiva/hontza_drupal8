function despliegue_menu_local_tasks_alter(&$data, $route_name) {
  $despliegue_block_controller=new DespliegueBlockController();
  //if($estrategia_block_controller->estrategia_is_tab_estrategia()){
  if($despliegue_block_controller->despliegue_is_node('despliegue')){
    $vigilancia=new VigilanciaController();  
    $my_grupo=$vigilancia->vigilancia_get_grupo_default_value();
    $gid=0;
    if(!empty($my_grupo)){
      $gid=$my_grupo->id();
    }
    //echo print_r($data,1);exit();
    
    $nid=$despliegue_block_controller->despliegue_get_route_nid();

    $route_string='node.add';
    //$route_string='estrategia.node.add.despliegue';
    $data['tabs'][0]['despliegue_add_decision'] = array(
      '#theme' => 'menu_local_task',
      '#link' => array(
        'title' => t('Add Decision'),
        //'url' => Url::fromRoute('despliegue_add_decision',array('group'=>$gid,'nid'=>$nid)),
        'url' => Url::fromRoute($route_string,array('node_type' =>'decision','nid'=>$nid)),
        //'url' => Url::fromRoute($route_string,array('nid'=>$nid)),
        'localized_options' => array(
          'attributes' => array(
            'title' => t('Add Decision'),
          ),
        ),
      ),
    );
  } 
}